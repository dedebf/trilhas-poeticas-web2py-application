#web2py_user_form .form-control{

}

.form-control{
    background-color: #C9C5C5;
    background-image: none;
    border: 1px solid *#C9C5C5;
    border-radius: 0 !important;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
    color: #555;
    display: block;
    font-size: 14px;
    height: 45px;
    line-height: 1.42857;
    padding: 6px 12px;
    transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
    width: 100%;
  }

.form-control:focus{
  border-color: #A9A9A9;
  box-shadow: none;
  /*box-shadow:0 1px 1px #ccc;*/
}

#auth_user_remember_me__label{
  color: #A9A9A9;
}

#auth_user_remember_me__row .checkbox{
  padding-top: 0px !important;
}

.btn{
  margin-right: 12px;
  font-size: 12px;
  padding:8px 20px;
}

.btn-primary, .btn-default{
  background-image: none;
  background: #991B3E;
  border-color: #991B3E;
  border-radius: 0;
  color: #fff;
  text-shadow:none;
}

.btn-primary:focus, .btn-primary:hover,
.btn-default:focus, .btn-default:hover{
  background-color: #AD364D;
  border-color: #AD364D;
  color:#ffffff;
}

.btn-resetpws{
    background:#fff;
    color:#000;
}

div.flash.alert{
  background-color: #60CAE6;
  border-color: #60CAE6;
  color:#fff;
  border-radius: none;
  right: 40%;
}

